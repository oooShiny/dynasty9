{# Using iframe method to avoid CORS issues with muse.ai API #}
{% if card_type == 'horizontal' %}
  {% set css = 'aspect-square w-48 h-48' %}
{% elseif card_type == 'vertical' %}
  {% set css = 'w-full h-40' %}
{% else %}
  {% set css = 'absolute inset-0 w-full h-full aspect-video' %}
{% endif %}

{% if card_type == 'none' %}
<div class="relative" style="padding-top: 56.25%">
{% endif %}

  <iframe src="https://muse.ai/embed/{{ muse_id }}?links=0&search=0&title=0&controls=[-settings,-chromecast,-airplay]&&logo=0"
          class="bg-black {{ css }} border-0"
          allowfullscreen
          allow="autoplay; fullscreen"
          loading="lazy"></iframe>

{% if card_type == 'none' %}
</div>
{% endif %}
